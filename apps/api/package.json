{
  "name": "@quickstart-tma/api",
  "version": "1.0.0",
  "description": "Telegram Bot API with Fastify and Telegraf",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "clean": "rm -rf dist",
    "db:migrate": "tsx src/scripts/migrate.ts",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:status": "tsx src/scripts/status.ts"
  },
  "dependencies": {
    "fastify": "^4.24.3",
    "@fastify/cors": "^9.0.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/helmet": "^11.1.1",
    "telegraf": "^4.14.0",
    "@supabase/supabase-js": "^2.38.4",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsx": "^4.6.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  }
}
